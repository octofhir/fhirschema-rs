{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "url": "http://example.com/StructureDefinition/TestPatient",
  "name": "TestPatient",
  "title": "Test Patient Profile",
  "description": "A test patient profile for demonstration",
  "version": "1.0.0",
  "status": "draft",
  "type": "Patient",
  "baseDefinition": "http://hl7.org/fhir/StructureDefinition/Patient",
  "derivation": "constraint",
  "elements": {
    "Patient.id": {
      "path": "Patient.id",
      "definition": "The logical ID of the resource",
      "short": "Logical id of this artifact",
      "min": 1,
      "max": "1",
      "type": [
        {
          "code": "id"
        }
      ]
    },
    "Patient.name": {
      "path": "Patient.name",
      "definition": "A name associated with the individual",
      "short": "A name for the patient",
      "min": 1,
      "max": "*",
      "type": [
        {
          "code": "HumanName"
        }
      ]
    },
    "Patient.birthDate": {
      "path": "Patient.birthDate",
      "definition": "The date of birth for the individual",
      "short": "The date of birth for the individual",
      "min": 0,
      "max": "1",
      "type": [
        {
          "code": "date"
        }
      ]
    }
  },
  "constraints": [
    {
      "key": "pat-1",
      "severity": "error",
      "human": "Patient must have either name or birthDate",
      "expression": "name.exists() or birthDate.exists()"
    }
  ]
}